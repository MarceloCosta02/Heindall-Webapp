@model AppHeindall.Models.Grupo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Editar Grupo</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" class="card shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="GrupoName" class="form-label"></label>
                    <input asp-for="GrupoName" class="form-control" />
                    <span asp-validation-for="GrupoName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GrupoDescription" class="form-label"></label>
                    <textarea asp-for="GrupoDescription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="GrupoDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GrupoType" class="form-label"></label>
                    <input asp-for="GrupoType" class="form-control" />
                    <span asp-validation-for="GrupoType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GrupoMetodo" class="form-label"></label>
                    <input asp-for="GrupoMetodo" class="form-control" />
                    <span asp-validation-for="GrupoMetodo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GrupoURL" class="form-label"></label>
                    <input asp-for="GrupoURL" class="form-control" />
                    <span asp-validation-for="GrupoURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GrupoUser" class="form-label"></label>
                    <input asp-for="GrupoUser" class="form-control" />
                    <span asp-validation-for="GrupoUser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GrupoPassword" class="form-label"></label>
                    <input asp-for="GrupoPassword" class="form-control" />
                    <span asp-validation-for="GrupoPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GrupoPort" class="form-label"></label>
                    <input asp-for="GrupoPort" class="form-control" />
                    <span asp-validation-for="GrupoPort" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublicKey" class="form-label"></label>
                    <textarea asp-for="PublicKey" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="PublicKey" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PrivateKey" class="control-label">Private Key</label>
                    <div class="input-group">
                        <input asp-for="PrivateKey" class="form-control" />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" data-toggle="tooltip" data-placement="top" title="Generate new key pair"><i class="fas fa-sync-alt"></i></button>
                        </div>
                    </div>
                    <span asp-validation-for="PrivateKey" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
